<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_delete_invoices_wizard" model="ir.ui.view">
    <field name="name">invoice.deletion.wizard.form</field>
    <field name="model">invoice.deletion.wizard</field>
    <field name="arch" type="xml">
      <form string="Delete Invoices">
        <group>
          <field name="partner_id"/>
        </group>
        <footer>
          <button string="Delete Invoices" type="object" name="start_background_job" class="btn-primary"/>
          <button string="Cancel" class="btn-secondary" special="cancel"/>
        </footer>
      </form>
    </field>
  </record>
</odoo>