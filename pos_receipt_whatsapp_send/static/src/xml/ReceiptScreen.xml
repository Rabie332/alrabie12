<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
      <t
        t-name="ReceiptScreen"
        t-inherit="point_of_sale.ReceiptScreen"
        t-inherit-mode="extension"
        owl="1"
    >
          <xpath expr="//div[hasclass('buttons')]" position="before">
            <div class="buttons">
                <div class="button send whatsapp" t-on-click="sendWhatsapp">
                    <i class="fa fa-whatsapp" />
                    <span> Send receipt to customer Whatsapp</span>
                </div>
            </div>
          </xpath>
    </t>
</templates>
