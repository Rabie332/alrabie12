<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form_inherit_payroll_tn" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.payroll</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="40" />
        <field name="inherit_id" ref="hr_payroll.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@data-key='hr_payroll']" position="inside">
                <h2>Comptabilisation de la Paie</h2>
                <div class="row mt16 o_settings_container" name="config_payroll">
                    <div class="col-12 col-lg-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="is_payroll_account_batch" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="is_payroll_account_batch" />
                            <div class="text-muted">
                                When this option is activated, the accounting entries will be generated by batch and not by bulletin.
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>

</odoo>
