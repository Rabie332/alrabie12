<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="hotel_reservation_cancel_wizard_form_view" model="ir.ui.view">
        <field name="name">hotel.reservation.cancel.wizard.form</field>
        <field name="model">hotel.reservation.cancel.wizard</field>
        <field name="arch" type="xml">
            <form string="Cancel Reason">
                <group>
                    <field name="reservation_id" invisible="1" />
                   <field name='reason_cancel' nolabel='1' required="1" />
                </group>
                <footer>
                    <button name='action_cancel' string="Save" type="object" icon="fa-remove" class="btn btn-primary" />
                    <button special="cancel" string="Cancel" icon="fa-close" class="btn btn-primary" />
                </footer>
            </form>
        </field>
    </record>


</odoo>
