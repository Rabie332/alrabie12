<?xml version="1.0" encoding="UTF-8" ?>
<odoo noupdate="1">

    <record id="mail_hr_covenant_approval" model="mail.activity.type">
        <field name="name">Covenant is ready to be approved</field>
        <field name="icon">fa-sun-o</field>
        <field name="res_model_id" ref="hr_covenant.model_hr_covenant" />
        <field name="category">validation</field>
    </record>

    <record id="mt_hr_covenant_approved" model="mail.message.subtype">
        <field name="name">Approved</field>
        <field name="res_model">hr.covenant</field>
        <field name="description">Covenant is approved</field>
    </record>

    <record id="mt_hr_covenant_refused" model="mail.message.subtype">
        <field name="name">Refused</field>
        <field name="res_model">hr.covenant</field>
        <field name="description">Covenant is refused</field>
    </record>
</odoo>
