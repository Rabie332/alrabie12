<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <data>
        <record id="whatsapp_send_form_view" model="ir.ui.view">
            <field name="name">whatsapp.message.wizard.form</field>
            <field name="model">whatsapp.message.wizard</field>
            <field name="arch" type="xml">
                <form string="Send by Whatsapp">
                    <group>
                        <field name="partner_id" />
                        <field name="mobile" />
                    </group>
                    <group>
                        <field name="message" />
                    </group>
                    <footer>
                        <button name="send_message" string="Send" type="object" class="oe_highlight" />
                        <button name="cancel" string="Cancel" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
