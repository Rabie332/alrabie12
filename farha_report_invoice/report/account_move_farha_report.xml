<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <template id="assets_pdf_css_farha" name="Custom Report CSS" inherit_id="web.report_assets_common">
        <xpath expr="." position="inside">
            <link href="/web_ar/static/src/css/rtl.css" rel="stylesheet" />
        </xpath>
    </template>
    <template id="external_layout_farha">
        <t t-if="not o" t-set="o" t-value="doc" />
        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id" />
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()" />
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company" />
            </t>
        </t>
        <div t-attf-class="o_company_#{company.id}_layout header" t-att-style="report_header_style">
            <div class="o_background_header">
                <div class="float-right">
                    <h3 class="mt0 text-right" t-field="company.report_header" />
                </div>
                <img t-if="company.logo" t-att-src="image_data_uri(company.logo)" class="float-left" alt="Logo" />
                <div class="float-left company_address">
                    <div>
                        <strong t-field="company.partner_id.name" />
                    </div>
                    <span
                        t-field="company.partner_id"
                        t-options='{"widget": "contact", "fields": ["address"], "no_marker": true}'
                    />
                </div>
                <div class="clearfix mb8" />
            </div>
        </div>
        <div
            t-attf-class="o_company_#{company.id}_layout article o_report_layout_background"
            t-att-data-oe-model="o and o._name"
            t-att-data-oe-id="o and o.id"
            t-att-data-oe-lang="o and o.env.context.get('lang')"
        >
            <t t-call="web.address_layout" />
            <t t-raw="0" />
        </div>
        <div t-attf-class="o_company_#{company.id}_layout footer o_background_footer">
            <div class="text-center">
                <ul class="list-inline">
                    <li t-if="company.phone" class="list-inline-item">
                        <i class="fa fa-phone" role="img" aria-label="Phone" title="Phone" />
                        <span class="o_force_ltr" t-field="company.phone" />
                    </li>
                    <li t-if="company.email" class="list-inline-item">
                        <i class="fa fa-at" role="img" aria-label="Email" title="Email" />
                        <span t-field="company.email" />
                    </li>
                    <li t-if="company.website" class="list-inline-item">
                        <i class="fa fa-globe" role="img" aria-label="Website" title="Website" />
                        <span t-field="company.website" />
                    </li>
                    <li t-if="company.vat" class="list-inline-item">
                        <i class="fa fa-building-o" role="img" aria-label="Fiscal number" />
                        <t t-esc="company.country_id.vat_label or 'Tax ID'" />:
                        <span t-field="company.vat" />
                    </li>
                </ul>
                <div t-field="company.report_footer" />
                <div t-if="report_type == 'pdf'" class="text-muted">
                    Page:
                    <span class="page" />
                    of
                    <span class="topage" />
                </div>
            </div>
        </div>
    </template>
    <template id="account_move_farha_template">
        <t t-call="web.html_container">
            <t t-foreach="docs.with_context(lang='ar_001')" t-as="o">
                <t t-call="farha_report_invoice.external_layout_farha">
                    <div class="row">
                        <div class="col-4" style="width:100%;">
                            <img
                                t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('QR', o.qr_code, 600, 600)"
                                style="width:100px;height:100px;padding-bottom: 1em;"
                            />
                        </div>
                        <div class="col-4">
                            <div
                                style="text-align:center;background-color:#E6E6E6;font-weight:bold;font-size:15px;width:100%;"
                            >
                                <p>فاتورة ضريبية</p>
                                <p>VAT INVOICE</p>
                                <span style="color:red;" t-field="o.name" />
                            </div>
                        </div>
                        <div class="col-4">
                            <table style="width:100%;">
                                <tr style="background-color:#E6E6E6">
                                    <td style="background-color:#E6E6E6">الرقم الضريبي
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Vat No
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.company_id.vat" />
                                        <br />
                                    </td>
                                </tr>
                                <tr style="background-color:#E6E6E6">
                                    <td style="background-color:#E6E6E6">تاريخ الفاتورة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Invoice Date
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-esc="o.get_hijri_date(o.invoice_date, '/')" />
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-field="o.invoice_date" />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row" style="border: 2px solid black;margin-top: 20px;">
                        <div class="col-6" style="text-align:right">
                            <u>المطلوب من السادة/</u>
                            <span t-esc="o.with_context({'lang': 'ar_001'}).partner_id.name" />
                            <br />
                            <br />
                            <u>العنوان/</u>
                            <span t-esc="o.with_context({'lang': 'ar_001'}).partner_id.street" />
                        </div>
                        <div class="col-6" style="text-align:left">
                            <u>Mrs\</u>
                            <span t-esc="o.with_context({'lang': 'en_US'}).partner_id.name" />
                            <br />
                            <br />
                            <u>VAT No.\</u>
                            <span t-esc="o.partner_id.vat" />
                        </div>
                    </div>
                    <div class="row" style="padding-top: 20px;">
                        <div class="col-4">
                            <table>
                                <tr>
                                    <td style="background-color:#E6E6E6">رقم المعاملة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Jop No
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.name" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">رقم إذن التسليم
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">D/O No
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.delivery_authorization_number" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">رقم البيان الجمركي
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">C/D No
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.statement_number" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">وصف البضاعة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Goods Type
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.description" />
                                        <br />
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-4">
                            <table style="width:100%;">
                                <tr>
                                    <td style="background-color:#E6E6E6">تاريخ المعاملة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Job Date
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <span t-esc="o.get_hijri_date(o.clearance_request_id.date, '/')" />
                                        <br />
                                    </td>
                                    <td style="text-align:left;">
                                        <span t-field="o.clearance_request_id.date" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">رقم البوليصة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">B/L No
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.shipping_number" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6;white-space: nowrap;">تاريخ البيان الجمركي
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">C/D date
                                    </td>
                                </tr>
                                <tr>
                                    <td style="white-space: nowrap;">
                                        <span
                                            t-esc="o.get_hijri_date(o.clearance_request_id.clearance_document_date, '/')"
                                        />
                                        <br />
                                    </td>
                                    <td style="text-align:left;white-space: nowrap;">
                                        <span t-field="o.clearance_request_id.clearance_document_date" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">المرجع</td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Ref
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.payment_reference" />
                                        <br />
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <div class="col-4">
                            <table style="width:100%;">
                                <tr>
                                    <td style="background-color:#E6E6E6">نوع الفاتورة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Invoice Type
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-if="o.clearance_request_id.request_type == 'clearance'">التخليص
                                        </span>
                                        <span t-if="o.clearance_request_id.request_type == 'transport'">النقل
                                        </span>
                                        <span t-if="o.clearance_request_id.request_type == 'other_service'">خدمات أخرى
                                        </span>
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">كمية البوليصة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">B/L Qty
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.number_shipment" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">اسم الباخرة
                                    </td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Vessel
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.vessel" />
                                        <br />
                                    </td>
                                </tr>
                                <tr>
                                    <td style="background-color:#E6E6E6">اسم الوكيل</td>
                                    <td style="background-color:#E6E6E6;text-align:left;">Agent Name
                                    </td>
                                </tr>
                                <tr>
                                    <td colspan="2" style="text-align:center;">
                                        <span t-field="o.clearance_request_id.shipping_agent_id.name" />
                                        <br />
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                    <div class="row" style="padding-top: 20px;">
                        <table style="width:100%;">
                            <tr>
                                <td style="background-color:#E6E6E6;text-align:right;">البيان
                                </td>
                                <td style="text-align:center;">
                                    <span t-field="o.payment_reference" />
                                </td>
                                <td style="background-color:#E6E6E6;text-align:left;">Notes
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="row" style="padding-top: 20px;">
                        <table style="width:100%;">
                            <thead>
                                <tr>
                                    <th
                                        style="border-right: 1px solid black;background-color:#E6E6E6;font-weight:bold;color:black;padding: 5px;"
                                        width="14%"
                                    >
                                        <p style="float: right;">الاجمالي</p>
                                        <p style="float: left;">Total</p>
                                    </th>
                                    <th
                                        style="border-right: 1px solid black;background-color:#E6E6E6;font-weight:bold;color:black;padding: 5px;"
                                        width="10%"
                                    >
                                        <p style="float: right;">ض.ق.م</p>
                                        <p style="float: left;">VAT</p>
                                    </th>
                                    <th
                                        style="border-right: 1px solid black;background-color:#E6E6E6;font-weight:bold;color:black;padding: 5px;"
                                        width="13%"
                                    >
                                        <p style="float: right;">المبلغ</p>
                                        <p style="float: left;">AMOUNT</p>
                                    </th>
                                    <th
                                        style="border-right: 1px solid black;background-color:#E6E6E6;font-weight:bold;color:black;padding: 5px;"
                                        width="16%"
                                    >
                                        <p style="float: right;">الكمية</p>
                                        <p style="float: left;">Quantity</p>
                                    </th>
                                    <th
                                        style="border-right: 1px solid black;background-color:#E6E6E6;font-weight:bold;color:black;padding: 5px;"
                                        width="37%"
                                    >
                                        <p style="float: right;">الوصف</p>
                                        <p style="float: left;">DESCRIPTION</p>
                                    </th>
                                </tr>
                            </thead>
                            <tbody class="invoice_tbody">
                                <t t-set="current_subtotal" t-value="0" />
                                <t t-set="current_tax_amount" t-value="0" />
                                <t t-set="current_price_unit" t-value="0" />
                                <t t-set="quantity" t-value="0" />
                                <t
                                    t-set="lines"
                                    t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"
                                />
                                <t t-foreach="lines" t-as="line">
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_subtotal"
                                        groups="account.group_show_line_subtotals_tax_excluded"
                                    />
                                    <t
                                        t-set="current_subtotal"
                                        t-value="current_subtotal + line.price_total"
                                        groups="account.group_show_line_subtotals_tax_included"
                                    />
                                    <t t-set="current_tax_amount" t-value="current_tax_amount + line.tax_amount" />
                                    <t t-set="current_price_unit" t-value="current_price_unit + line.price_unit" />
                                    <t t-set="quantity" t-value="quantity + line.quantity" />
                                    <tr
                                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                                    >
                                        <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                            <td
                                                style="border-right: 1px solid black;"
                                                t-attf-class="o_price_total text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                            >
                                                <span
                                                    class="text-nowrap"
                                                    t-field="line.price_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    groups="account.group_show_line_subtotals_tax_excluded"
                                                />
                                                <span
                                                    class="text-nowrap"
                                                    t-field="line.price_total"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                    groups="account.group_show_line_subtotals_tax_included"
                                                />
                                            </td>
                                            <td
                                                style="border-right: 1px solid black;"
                                                t-attf-class="o_price_total text-center {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                            >
                                                <span
                                                    class="text-nowrap"
                                                    t-field="line.tax_amount"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                            <td
                                                style="border-right: 1px solid black;"
                                                class="text-center o_price_total"
                                            >
                                                <span
                                                    class="text-nowrap"
                                                    t-field="line.price_unit"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                            <td style="border-right: 1px solid black;" class="text-center">
                                                <span t-field="line.quantity" />
                                            </td>
                                            <td
                                                style="border-right: 1px solid black;"
                                                t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"
                                                name="account_invoice_line_name"
                                            >
                                                <table width="100%" t-if="line.product_id">
                                                    <tr>
                                                        <td width="50%">
                                                            <span
                                                                t-field="line.with_context({'lang': 'ar_001'}).product_id.description_sale"
                                                                t-options="{'widget': 'text'}"
                                                            />
                                                        </td>
                                                        <td width="50%">
                                                            <span
                                                                t-field="line.with_context({'lang': 'en_US'}).product_id.description_sale"
                                                                t-options="{'widget': 'text'}"
                                                            />
                                                        </td>
                                                    </tr>
                                                </table>
                                                <span
                                                    t-field="line.name"
                                                    t-options="{'widget': 'text'}"
                                                    t-if="not line.product_id"
                                                />
                                            </td>
                                        </t>
                                        <t t-if="line.display_type == 'line_section'">
                                            <td colspan="99" style="border-right: 1px solid black;">
                                                <span t-field="line.name" t-options="{'widget': 'text'}" />
                                            </td>
                                            <t t-set="current_section" t-value="line" />
                                            <t t-set="current_subtotal" t-value="0" />
                                        </t>
                                        <t t-if="line.display_type == 'line_note'">
                                            <td colspan="99" style="border-right: 1px solid black;">
                                                <span t-field="line.name" t-options="{'widget': 'text'}" />
                                            </td>
                                        </t>
                                    </tr>
                                    <t
                                        t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')"
                                    >
                                        <tr class="is-subtotal text-right">
                                            <td colspan="99">
                                                <strong class="mr16">Subtotal</strong>
                                                <span
                                                    t-esc="current_subtotal"
                                                    t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                                />
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <tr>
                                    <td style="border-right: 1px solid black;" class="text-center o_price_total">
                                        <span
                                            t-esc="current_subtotal"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                    <td style="border-right: 1px solid black;" class="text-center o_price_total">
                                        <span
                                            t-esc="current_tax_amount"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                    <td style="border-right: 1px solid black;" class="text-center o_price_total">
                                        <span
                                            t-esc="current_price_unit"
                                            t-options='{"widget": "monetary", "display_currency": o.currency_id}'
                                        />
                                    </td>
                                    <td class="text-center o_price_total" style="border-right: 1px solid black;">
                                        <span t-esc="'%.2f'%(quantity)" />
                                    </td>
                                    <td style="border-right: 1px solid black;">
                                        <span style="float: right;" t-options="{'widget': 'text'}">الاجمالي
                                        </span>
                                        <span style="float: left;" t-options="{'widget': 'text'}">Total
                                        </span>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row" style="width:100%;padding-top: 20px; page-break-inside: avoid;">
                        <div class="clearfix" style="direction:ltr;width:100%;padding-top: 20px;">
                            <div id="total">
                                <div style="float: right;" t-attf-class="col-6 ml-auto">
                                    <table class="table table-sm" style="page-break-inside: avoid;">
                                        <tr class="border-black o_subtotal" style="">
                                            <td
                                                style="background-color:#E6E6E6;white-space: nowrap;"
                                                class="text-right"
                                            >Total Before Tax
                                            </td>
                                            <td
                                                style="background-color:#E6E6E6;white-space: nowrap;"
                                                class="text-center"
                                            >الإجمالي قبل الضريبة
                                            </td>
                                            <td class="text-left">
                                                <span t-field="o.amount_untaxed" />
                                            </td>
                                        </tr>
                                        <t t-foreach="o.amount_by_group" t-as="amount_by_group">
                                            <tr style="">
                                                <t>
                                                    <td
                                                        colspan="2"
                                                        style="background-color:#E6E6E6;white-space: nowrap;"
                                                    >
                                                        <div class="row">
                                                            <div class="col-4">VAT Value</div>
                                                            <div class="col-4" t-esc="amount_by_group[0]" />
                                                            <div class="col-4">ض ق م</div>
                                                        </div>
                                                    </td>
                                                    <td class="text-left o_price_total">
                                                        <span class="text-nowrap" t-esc="amount_by_group[3]" />
                                                    </td>
                                                </t>
                                            </tr>
                                        </t>
                                        <tr class="border-black o_total">
                                            <td
                                                style="background-color:#E6E6E6;white-space: nowrap;"
                                                class="text-right"
                                            >Total After Tax
                                            </td>
                                            <td
                                                style="background-color:#E6E6E6;white-space: nowrap;"
                                                class="text-center"
                                            >الإجمالي بعد الضريبة
                                            </td>
                                            <td class="text-left" style="background-color:white;">
                                                <span class="text-nowrap" t-field="o.amount_total" />
                                            </td>
                                        </tr>
                                        <t t-if="print_with_payments">
                                            <t t-if="o.payment_state != 'invoicing_legacy'">
                                                <t
                                                    t-set="payments_vals"
