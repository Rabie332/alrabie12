<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <!-- Form View Inherit -->

    <record id="hr_employee_view_form_inherit_transportation" model="ir.ui.view">
        <field name="name">hr.employee.view.form.inherit.transportation</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
              <div name="button_box" position="inside">
                  <button name="transportation_rewards_payments" type="object" icon="fa-gift">
                                <field
                        name="payments_rewards_amount"
                        class="o_stat_value"
                        string="Rewards"
                        widget="statinfo"
                    />
                        </button>
              </div>
        </field>
     </record>

</odoo>
